<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_moviereview_cardview">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp">
        <TextView
            android:id="@+id/movie_review_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorAccent"
            android:textColor="@color/titleColor"
            android:textSize="24sp"
            android:padding="4dp"
            android:text="@string/reviewer_name"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/movie_review_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/movie_review_user"
            android:text="@string/review_content_st"
            tools:ignore="HardcodedText" />
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>